{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@actions/*": ["actions/*"],
      "@api/*": ["../../api/src/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@reducers/*": ["reducers/*"],
      "@styles/*": ["styles/*"],
      "@tests/*": ["tests/*"]
    },
    "strict": true,
    "target": "esnext"
  }
}
