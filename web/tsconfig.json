{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "isolatedModules": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@actions/*": ["store/actions/*"],
      "@assets/*": ["assets/*"],
      "@components/*": ["components/*"],
      "@core/*": ["core/*"],
      "@reducers/*": ["store/reducers/*"],
      "@store/*": ["store/*"],
      "@styles/*": ["styles/*"],
      "@tests/*": ["tests/*"],
      "@utils/*": ["utils/*"]
    },
    "strict": true,
    "strictNullChecks": false,
    "target": "esnext"
  }
}
